# ZSH Stuff
export ZSH="/home/stanislavv/.oh-my-zsh"
ZSH_THEME="muse"
plugins=(
  git
  zsh-autosuggestions
  zsh-syntax-highlighting
  zsh-completions
)
autoload -U compinit && compinit
source $ZSH/oh-my-zsh.sh

# Bash Settings
HISTCONTROL=ignoreboth
HISTSIZE=1000000
HISTFILESIZE=2000000
export LC_ALL=en_US.UTF-8

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/stanislavv/Apps/Conda/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/stanislavv/Apps/Conda/etc/profile.d/conda.sh" ]; then
        . "/home/stanislavv/Apps/Conda/etc/profile.d/conda.sh"
    else
        export PATH="/home/stanislavv/Apps/Conda/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# Private
PATH="$HOME/bin:$HOME/.local/bin:$PATH"

# NGC
alias ngc-mount='ngc workspace mount stan stan'
alias ngc-unmount='ngc workspace unmount stan && rm -rf stan'

# CUDA
CUDAROOT="/usr/local/cuda"
export LD_LIBRARY_PATH=$CUDAROOT/lib64:$LD_LIBRARY_PATH
export CFLAGS="-I$CUDAROOT/include $CFLAGS"
export CUDA_HOME=$CUDAROOT
export CUDA_PATH=$CUDAROOT
